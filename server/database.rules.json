{
  "rules": {
    "games": {
      "$gameId": {
        ".read": "data.child('players').child(auth.uid).val() === true"
      }
    },
    "hands": {
      "$gameId": {
        "$userId": {
          ".read": "$userId === auth.uid"
        }
      }
    },
    "users": {
      ".read": true
    }
  }
}
